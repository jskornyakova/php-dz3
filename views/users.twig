{% extends "layouts/main.twig" %}
{% block title %} All Users {% endblock %}
{% block content %}
    <div class="adduser">
        <a href="/user/add">Add new user</a>
    </div>
    <div class="users">
        <ul>
            {% for user in users %}
                <li>
                    <h4>{{ user.login }}</h4>
                    <a href='/user/one/?id={{ user.id }}'>More detailed</a>
                </li>
            {% else %}
                <p>No found</p>
            {% endfor %}
        </ul>
    </div>
{% endblock %}